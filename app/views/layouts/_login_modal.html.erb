<div id="login-modal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2 class="text-center">Log in</h2>
    </div>
    <div class="modal-body">
      <%= form_for(:user, url: session_path(:user)) do |f| %>
        <div class="input-container">
          <p class="input-label">Email</p>
          <%= f.text_field :email, class: "input large", id: "email-input", placeholder: "Enter Email",
                                   type: "email", required: true %>
        </div>
        <div class="input-container">
          <p class="input-label">Password</p>
          <%= f.password_field :password, class: "input large", id: "password-input", required: true %>
        </div>

        <div class="buttons">
          <div class="button-container login-button close">
            <div class="button medium secondary">
              <h3>Cancel</h3>
            </div>
          </div>
          <div class="button-container login-button">
            <span class="form-submit">
              <%= f.submit "Submit", name: "login", class: "button primary medium disabled" %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
